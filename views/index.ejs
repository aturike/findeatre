<%- include("./partials/navbar.ejs") %>

<h2>Upcoming shows in</h2>
<section class="citysection">
    <h2>Amsterdam</h2>

    <div class="showgrid">
        <% if (amsterdamshows.length === 0) { %>
            <p>No upcoming show in Amsterdam!</p>
        <% } else { %>
        <% amsterdamshows.forEach(show => { %>
            <a href="/shows/<%-show._id%>">
            <div class="showbox">
                <img src="<%=show.image%>" alt="Photo of <%=show.title%>">
                <div class="topleft-position">
                    <p><%=show.date.toDateString()%></p>
                    <h2><%=show.title %></h2>
                    <p><%=show.location%></p>
                </div>
                <div class="topright-position">
                    <form action="/auth/show/<%-show._id%>">
                        <button type="submit" id="favouritebtn"><img src="/images/staricon-white.png" alt="Add to favourite"></button>
                    </form>
                </div>
            </div>
            </a>         
        <% }) %>
        <% } %>
    </div>
</section>

