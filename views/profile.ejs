<%- include("./partials/navbar.ejs") %>

<h1>My profile</h1>
<section class="profile-section">
    <div class="profile-photo">
        <div class="JSphotoStatic">
            <img src="<%= user.imagesrc %>" alt="profile-pic">
            <button class="JSbtnEditphoto">
                <i class="fa fa-camera fa-4x" style="color: #fcfcfc;"></i>
            </button>
        </div>
        <form style="display: none;" action="/profile/edit/img/<%= user._id %>" method="post" enctype="multipart/form-data" class="JSformEditphoto">
            <i class="fa fa-camera fa-4x" style="width:100px;color: #fcfcfc;"></i>
            <input type="file" name="imageUrl" accept="image/png, image/jpg">
            <button type="submit" class="JSbtnSubmitphoto">Edit</button>
        </form>
    </div>
    <div class="profile-info">
        <h2>Hello <%= user.username %></h2>
        <div>
            <div class="JSemailStatic">
                <h3><%= user.email %></h3>
                <button class="JSbtnEdit">
                    <i class="fa fa-pencil-alt" style="font-size: 25px;color: white;"></i>
                </button>
            </div>
            <form style="display: none;" class="JSformEdit" action="/profile/edit/email/<%= user._id %>" method="POST">
                <input type="email" name="newMail" class="input-emailedit" placeholder="Type here your new email address...">
                <button class="JSbtnSubmit" type="submit">Modify</button>
            </form>
        </div>
    </div>
</section>
