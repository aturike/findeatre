<div class="leftbox">
    <img src="<%= image%>" alt="Photo of <%=title%>">
    <h2><%=title %></h2>
    <div>
        <p>Date: <%=show.date.toDateString()%></p>
        <p>Location: <%=show.location%></p>
    </div>
</div>

<div class="rightbox">
    <div>
        <h4>Synopsis</h4>
        <p><%=story%></p>
    </div>
    <div>
        <h4>Author</h4>
        <p><%=author%></p>
    </div>
    <div>
        <h4>Director</h4>
        <p><%=director%></p>
    </div>
    <div>
        <h4>Cast</h4>
        <p><%=cast%></p>
    </div>
</div>
